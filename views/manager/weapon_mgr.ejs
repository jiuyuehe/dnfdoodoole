<%-  include back_header.ejs %>

<body onload="load_weapon_list()">

<%- include back_topLink.ejs %>

<div class="container">

    <%- include left_bar.ejs %>

    <div class="well col-xs-9">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title"> <%= title %></h3>
            </div>
            <div class="panel-body">
                <div class=" well-sm">
                    <div class="pull-left">
                        <a href="/admin/toAddWeapon" class="btn btn-primary">增加武器</a>
                    </div>

                    <div class="pull-right col-xs-4">
                        <div class="input-group">
                            <input type="text" class="form-control">
                              <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Go!</button>
                              </span>
                        </div>
                        <!-- /input-group -->
                    </div>
                </div>
                <!-- /.col-lg-6 -->
                <div>
                    <table class="table table-striped">
                        <tr>
                            <th>序号</th>
                            <th>武器名称</th>
                            <th>图片</th>
                            <th>等级</th>
                            <th>角色</th>
                            <th>颜色</th>
                            <th>类型</th>
                            <th>上传者</th>
                            <th>可操作项</th>
                        </tr>

                    </table>
                    <hr>

                    <div class="pull-right" id="weapon_page">
                        <ul class="pagination">
                            <li class="disabled"><a href="#">第一页</a></li>
                            <li><a href="#" onclick="prefixPage()">上一页</a></li>
                            <li><a href="#" onclick="nextPage()">下一页</a></li>
                            <li class="disabled"><a href="#">共页</a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
</body>

<%- include ../footer.ejs %>