<div class="modal fade" id="regModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">欢迎您注册doodoole</h4>
            </div>

            <form id="regForm" class="form-horizontal" role="form" method="post" action="/reg">

            <div class="modal-body">

                <div class="form-group">
                    <label for="inputEmail1" class="col-lg-2 control-label">昵称</label>
                    <div class="col-lg-8">
                        <input type="text" name="niname" class="form-control" id="niname" placeholder="填写2-16个字符">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail1" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-8">
                        <input type="email" name="email" class="form-control" id="email" placeholder="通过email进行注册">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword1" class="col-lg-2 control-label">密码</label>
                    <div class="col-lg-8">
                        <input type="password" name="password" class="form-control" id="password" placeholder="密码为6-16个字符组成">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword1" class="col-lg-2 control-label">重复密码</label>
                    <div class="col-lg-8">
                        <input type="password"  name="password-repeat" class="form-control" id="repassword" placeholder="请再输入一次">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword1" class="col-lg-2 control-label">验证码</label>
                    <div class="col-lg-4">
                        <input type="text" class="form-control" id="code" placeholder="点击自动填写" value="" ><a href="#" onclick="getCode()">点击获取验证码</a>
                    </div>
                </div>

                <div class="form-group ">
                    <div class="col-lg-10 alert " id="regtip">

                    </div>
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button"  class="btn btn-primary" onclick="doregister()" >注册</button>

            </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->